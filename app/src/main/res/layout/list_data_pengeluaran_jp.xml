<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sh_nama_pengeluaran_jp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="12sp"
            tools:text="Nama Pengeluaran" />

        <TextView
            android:id="@+id/tv_sh_harga_jp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="end"
            tools:text="Harga" />

        <TextView
            android:id="@+id/tv_sh_jangkaWaktuMenabung_jp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            tools:text="Jangka Waktu Menabung" />

        <TextView
            android:id="@+id/tv_sh_nominalTabung_jp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="12sp"
            tools:text="Nominal Simpanan per Bulan" />
    </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
</LinearLayout>