<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sh_nama_pengeluaran_bulanan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Nama Pengeluaran" />

        <TextView
            android:id="@+id/tv_sh_nominal_kebutuhan_bulanan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            tools:text="Harga" />

        <TextView
            android:id="@+id/tv_sh_batas_waktu_bayar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            tools:text="Batas Waktu Bayar" />

        <TextView
            android:id="@+id/tv_sh_jenis_pengeluaran"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Jenis Pengeluaran" />

        <TextView
            android:id="@+id/tv_sh_bulan_pengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Bulan Pengeluaran" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>